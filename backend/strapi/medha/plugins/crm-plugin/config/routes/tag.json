{
  "routes": [
    {
      "method": "GET",
      "path": "/tags",
      "handler": "tag.find",
      "config": {
        "policies": ["plugins::users-permissions.isAuthenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/tags/:id",
      "handler": "tag.findOne",
      "config": {
        "policies": ["plugins::users-permissions.isAuthenticated"]
      }
    },
    {
      "method": "POST",
      "path": "/tags",
      "handler": "tag.create",
      "config": {
        "policies": ["plugins::users-permissions.isAuthenticated"]
      }
    },
    {
      "method": "PUT",
      "path": "/tags/:id",
      "handler": "tag.update",
      "config": {
        "policies": ["plugins::users-permissions.isAuthenticated"]
      }
    },
    {
      "method": "DELETE",
      "path": "/tags/:id",
      "handler": "tag.delete",
      "config": {
        "policies": ["plugins::users-permissions.isAuthenticated"]
      }
    }
  ]
}
