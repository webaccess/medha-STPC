{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "name": "Event"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "start_datetime": {
      "type": "datetime"
    },
    "end_datetime": {
      "type": "datetime",
      "required": true
    },
    "address": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "upload_logo": {
      "model": "file",
      "via": "related",
      "allowedTypes": ["images", "files", "videos"],
      "plugin": "upload",
      "required": false
    },
    "question_set": {
      "model": "question-set"
    },
    "state": {
      "plugin": "crm-plugin",
      "model": "state"
    },
    "zone": {
      "model": "zone"
    },
    "rpc": {
      "model": "rpc"
    },
    "streams": {
      "collection": "stream"
    },
    "qualifications": {
      "type": "component",
      "repeatable": true,
      "component": "qualifications.qualifications"
    },
    "educations": {
      "type": "component",
      "repeatable": true,
      "component": "educations.educations"
    },
    "contacts": {
      "plugin": "crm-plugin",
      "collection": "contact"
    }
  }
}
