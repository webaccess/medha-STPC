{
  "connection": "default",
  "collectionName": "activities",
  "info": {
    "name": "Activity"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "activity_type": {
      "type": "enumeration",
      "enum": [
        "workshop",
        "industrialVisit",
        "training"
      ],
      "required": true
    },
    "academic_year": {
      "model": "academic-year"
    },
    "college": {
      "model": "college"
    },
    "start_date_time": {
      "type": "datetime",
      "required": true
    },
    "end_date_time": {
      "type": "datetime",
      "required": true
    },
    "education_year": {
      "type": "enumeration",
      "enum": [
        "First",
        "Second",
        "Third",
        "Fourth"
      ]
    },
    "streams": {
      "collection": "stream"
    },
    "upload_logo": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "trainer_name": {
      "type": "string"
    },
    "question_set": {
      "model": "question-set",
      "via": "activities"
    },
    "address": {
      "type": "text",
      "required": true
    },
    "description": {
      "type": "text"
    }
  }
}
