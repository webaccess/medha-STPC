{
  "routes": [
    {
      "method": "POST",
      "path": "/students/register",
      "handler": "student.register",
      "config": {
        "policies": ["validate"]
      }
    },
    {
      "method": "GET",
      "path": "/students",
      "handler": "student.find",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/students/count",
      "handler": "student.count",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/students/unapprove",
      "handler": "student.unapprove",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/students/approve",
      "handler": "student.approve",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/students/:id",
      "handler": "student.findOne",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/students",
      "handler": "student.create",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/students/:id",
      "handler": "student.edit",
      "config": {
        "policies": ["isOwner"]
      }
    },
    {
      "method": "DELETE",
      "path": "/students/:id",
      "handler": "student.delete",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/students/:id/education",
      "handler": "student.education",
      "config": {
        "policies": ["isOwner"]
      }
    },
    {
      "method": "GET",
      "path": "/students/:id/document",
      "handler": "student.document",
      "config": {
        "policies": ["isOwner"]
      }
    },
    {
      "method": "GET",
      "path": "/students/:id/academic-history",
      "handler": "student.academicHistory",
      "config": {
        "policies": ["isOwner"]
      }
    },
    {
      "method": "DELETE",
      "path": "/students/:id/file/:fileId",
      "handler": "student.deleteDocument",
      "config": {
        "policies": ["isOwner"]
      }
    }
  ]
}
